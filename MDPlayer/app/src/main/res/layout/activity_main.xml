<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
	android:columnCount="2" android:rowCount="2"
	android:background="#FF04B5BF" android:padding="10dp">
    <FrameLayout android:id="@+id/firstLayout"
		android:layout_width="0dp" android:layout_height="match_parent"
		android:layout_rowSpan="2" android:layout_columnWeight="7"/>
	<FrameLayout android:id="@+id/secondaryLayout"
		android:layout_width="0dp" android:layout_height="0dp"
		android:layout_columnWeight="3" android:layout_rowWeight="72.5"
		android:layout_marginLeft="10dp"/>
	<FrameLayout android:id="@+id/infoLayout"
		android:layout_width="0dp" android:layout_height="0dp"
		android:layout_columnWeight="3" android:layout_rowWeight="27.5"
		android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
		android:background="#000000"/>
</GridLayout>
